
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorBurgundy"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.UploadEventFragment">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/redirect_text">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorBurgundy">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent">

                        <LinearLayout
                            android:layout_width="400dp"
                            android:layout_height="251dp"
                            android:gravity="center"
                            android:background="@drawable/login_pages"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/logo_image"
                                android:layout_width="254dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@drawable/party" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.MyApp.Toolbar"
                        android:text="UPLOAD YOUR EVENT"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </LinearLayout>


                <EditText
                    android:id="@+id/eventname_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/white_button_orange_text"
                    android:drawableLeft="@drawable/ic_cake_black_24dp"
                    android:hint="Enter event name"
                    android:padding="5dp"
                    android:elevation="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:id="@+id/eventlocation_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/white_button_orange_text"
                    android:drawableLeft="@drawable/ic_map_black_24dp"
                    android:hint="Enter event location"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:elevation="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:id="@+id/eventdatetime_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/white_button_orange_text"
                    android:drawableLeft="@drawable/ic_time"
                    android:hint="Enter event date"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:elevation="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:id="@+id/evententrance_input_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/white_button_orange_text"
                    android:drawableLeft="@drawable/ic_entrance"
                    android:hint="Enter event Entrance"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:padding="5dp"
                    android:elevation="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:id="@+id/et_event_short_description"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/white_button_orange_text"
                    android:drawableLeft="@drawable/ic_entrance"
                    android:hint="Enter event short description"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:padding="5dp"
                    android:elevation="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:id="@+id/et_event_long_description"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/white_button_orange_text"
                    android:drawableLeft="@drawable/ic_entrance"
                    android:hint="@string/enter_a_detailed_descrition_of_the_event"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:padding="5dp"
                    android:elevation="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rate our app??"
                        android:textColor="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/rate_our_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Click Here"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:gravity="center"/>
                </LinearLayout>
                <Button
                    android:id="@+id/button_select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="select image"
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="@color/colorWhite"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/button_upload_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="upload Event"
                    android:textColor="@color/colorPrimary"
                    android:backgroundTint="@color/colorWhite"
                    android:gravity="center"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/redirect_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an Account?"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/redirect_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Register"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

